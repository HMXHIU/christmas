{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "paths": {
			"$lib": [
				"./app/src/lib"
			],
			"$lib/*": [
				"./app/src/lib/*"
			]
		},
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "target": "es6",
    // "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // import .json files
    "skipLibCheck": true // skip type checking all .d.ts files
  }
}
